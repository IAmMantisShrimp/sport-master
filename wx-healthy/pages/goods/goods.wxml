<van-card
    wx:for="{{ goodsList }}"
    wx:key="key"
    num="{{ item.number }}" 
    price="{{ item.price }}" 
    desc="{{ item.mainFunction }}" 
    title="{{ item.name }}" 
    thumb="{{ item.imageUrl }}">
    <view slot="footer">
        <van-button size="mini">购买</van-button>
    </view>
</van-card>