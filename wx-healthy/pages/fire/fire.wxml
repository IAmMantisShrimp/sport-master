<van-dialog id="van-dialog" />
<view class="title">
    近四周运动数据统计(步/天)
</view>
<!-- 运功统计 必须设置宽高，不然不显示 -->
<view style="width: 100%;height: 500px;">
    <ec-canvas id="mychart-dom-line" force-use-old-canvas="true" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
</view>
<!-- 今日步数 -->
<view class="step">
    今日走路{{ step }}步
</view>